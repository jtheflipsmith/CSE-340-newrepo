<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (loggedIn) { %>
            <a title="account info" href="/account/management">Welcome <%= (typeof user !== 'undefined' && user && user.account_firstname) ? user.account_firstname : 'User' %>!</a>
            <!-- Logout should use POST to match the server route and avoid GET side-effects -->
            <form id="logoutForm" action="/account/logout" method="POST" style="display:inline">
                <button type="submit" title="Log out" class="link-button" aria-label="Log out">Log Out</button>
            </form>

     
        <% } else { %>
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>

    </div>
</header>