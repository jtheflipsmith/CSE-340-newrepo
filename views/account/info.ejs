<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')  
    } %>

<%- messages() %>


<form action="/account/info" method="POST">
    <label for="account_firstnamel">First Name</label>
    <input type="text" minlength="3" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname %>">

    <label for="account_lastname">Last Name</label>
    <input type="text" name="account_lastname" id="account_lastname" required value="<%= locals.account_lastname %>">

    <label for="account_email">Email</label>
    <input type="text" name="account_email" id="account_email" required value="<%= locals.account_email %>">
    <button type="submit">Change</button>
        <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
</form>

<form action="/account/edit" method="POST">
    <label for="pswrd">Password</label>
    <input 
        type="password" 
        name="account_password" 
        id="pswrd"  
        minlength="12" 
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        placeholder="*********" 
        required>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <button type="submit">Change</button>
    <button type="button" id="passButton">Show Password</button>
    <input type="hidden" name="account_id" 
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
</form>